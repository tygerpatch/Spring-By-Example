<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <!-- TODO: What does this element do? -->
  <context:annotation-config />

  <!--  Constructor-Based Dependency Injection -->
  <bean id="constructor-injection" class="annotation.injection.constructor.Message">
    <constructor-arg value="@Autowired on Constructor" type="java.lang.String"/>
  </bean>

  <!--  Setter-Based Dependency Injection -->
  <bean id="setter-injection" class="annotation.injection.setter.Message" />

  <bean id="setter-message" class="java.lang.String">
    <constructor-arg value="@Autowired on Setter" />
  </bean>

  <!--  Property-Based Dependency Injection -->
  <bean id="property-injection" class="annotation.injection.property.Message" />

  <bean id="property-message" class="java.lang.String">
    <constructor-arg value="@Autowired on Property" />
  </bean>

  <!--  Using @Inject -->
  <bean id="inject-injection" class="annotation.injection.inject.Message" />

  <bean id="inject-message" class="java.lang.String">
    <constructor-arg value="@Inject on Property" />
  </bean>

  <!--  Using @Value -->
  <bean id="value-annotation" class="annotation.value.MyClass" />

  <!--  Using @Resource -->
  <bean id="resource-injection" class="annotation.injection.resource.Message" />

  <bean id="resource-message" class="java.lang.String">
    <constructor-arg value="@Resource on Property" />
  </bean>

</beans>
